<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}BfxMpl{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/bfxmplbudget/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/bfxmplbudget/css/bootstrap-theme.min.css') }}">
    {% endblock %}

    <!-- Mobile first -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
    <div class="container-fluid">
        {% block header %}
            <div id="bloc_header" class="row">
                <div class="col-md-2">
                    <a href="{{ url('bfxmpl_budget_default_index') }}">
                        <img src="{{ asset('bundles/bfxmplbudget/images/logo.jpg') }}" alt="Logo BfxMpl"/>
                    </a>
                </div>
                <div class="col-md-10 text-center">
                    <h1 id="h1">{% if page_title is defined %} {{ page_title }} {% endif %}</h1>
                </div>
            </div>
        {% endblock %}

        {% block navbar %}
            {{ include('BfxmplBudgetBundle:Default:navbar.html.twig') }}
        {% endblock %}

        {% block body %}{% endblock %}

        {% block footer %}{% endblock %}

        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('bundles/bfxmplbudget/js/jquery.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/bfxmplbudget/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </div>
</body>
</html>
