{% extends '::base.html.twig' %}

{% set page_title = "Liste des Comptes Bancaires" %}

{% import 'BfxmplBudgetBundle:Macro:crud.html.twig' as macrocrud %}

{% block body -%}
    <div class="table-responsive">
        <table class="records_list table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Banque</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('comptebancaire_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.libelle }}</td>
                    <td>{{ entity.banque }}</td>
                    <td>
                        <ul class="list-inline">
                            <li>
                                {{ macrocrud.link_show( path('comptebancaire_show', { 'id': entity.id }) ) }}
                            </li>
                            <li>
                                {{ macrocrud.link_show( path('comptebancaire_edit', { 'id': entity.id }) ) }}
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {{ macrocrud.link_new( path('comptebancaire_new') ) }}
{% endblock %}
